{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": ["package.json"],
  "exclude": ["dist", "node_modules", ".vscode", ".git", ".idea"]
}
